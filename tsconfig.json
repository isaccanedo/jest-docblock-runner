{
	"compilerOptions": {
		"lib": ["es2019"],
		"target": "ES2019",
		"moduleResolution": "node",
		"module": "commonjs",
		"baseUrl": "./src",
		"types": [
			"node",
			"jest"
		],
		"outDir": "dist/",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error"
	},
	"include": ["src/**/*"],
  "exclude": ["**/__tests__/**"],
  "compileOnSave": true
}